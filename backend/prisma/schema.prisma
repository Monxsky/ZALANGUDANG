datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
  role     String
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  sku         SKU[]
}

model SKU {
  id        Int     @id @default(autoincrement())
  code      String  @unique
  stock     Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int

  transactions Transaction[]
}

model Transaction {
  id        Int      @id @default(autoincrement())
  sku       SKU      @relation(fields: [skuId], references: [id])
  skuId     Int
  quantity  Int
  type      String // "IN" untuk stock masuk, "OUT" untuk stock keluar
  createdAt DateTime @default(now())
  syncToMarketplace Boolean @default(false)
}
